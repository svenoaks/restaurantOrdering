create table menuItemChoices(
	menuItemID int not null,
	choiceID int not null,
	primary key(menuItemID, choiceID),
	foreign key (menuItemID) references menuItems(menuItemID)
	on delete cascade,
	foreign key (choiceID) references choices(choiceID)
);

show tables;

show create table menuItemChoices;

drop table menuItemChoices;

create table choices(
	choiceID int not null auto_increment,
	description varchar(255),
	primary key (choiceID)
);

create table choiceOptions(
	choiceID int not null,
	optionID int not null,
	primary key (choiceID, optionID),
	foreign key (choiceID) references choices(choiceID)
	on delete cascade,
	foreign key (optionID) references options(optionID)
	on delete cascade
);

drop table choiceOptions;

create table options(
	optionID int not null auto_increment,
	description varchar(255) not null default 'not entered',
	addPrice decimal(7,2) not null default -1.00,
	primary key(optionID)
);